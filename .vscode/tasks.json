{
    "version": "2.0.0",
    "tasks": [
        {
            "detail": "Prepare the Neko-TOP debug environment",
            "type": "shell",
            "label": "Initialize Debug",
            "command": "${workspaceFolder}/run.sh",
            "args": [
                "--dry-run",
                "debug"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [ ],
            "dependsOn": [
                "Prepare environment",
                "Setup",
                "Cleanup debug"
            ],
        },
        {
            "detail": "Execution of environment preparation script",
            "type": "shell",
            "label": "Prepare environment",
            "command": "source",
            "args": [
                "${workspaceFolder}/prepare.env",
            ],
            "group": "build",
            "problemMatcher": [ ],
            "presentation": {
                "echo": true,
                "reveal": "never",
                "revealProblems": "onProblem",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true
            }
        },
        {
            "detail": "Execution of setup script",
            "type": "shell",
            "label": "Setup",
            "command": "${workspaceFolder}/setup.sh",
            "args": [
                "--device",
                "CUDA"
            ],
            "group": "build",
            "problemMatcher": [ ],
            "dependsOn": [
                "Prepare environment"
            ],
            "presentation": {
                "echo": true,
                "reveal": "never",
                "revealProblems": "onProblem",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true
            }
        },
        {
            "detail": "Execution of cleanup script",
            "type": "shell",
            "label": "Cleanup debug",
            "command": "rm",
            "args": [
                "-fr",
                "${workspaceFolder}/logs/debug"
            ],
            "group": "build",
            "problemMatcher": [ ],
            "presentation": {
                "echo": true,
                "reveal": "never",
                "revealProblems": "onProblem",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true
            }
        },
        {
            "detail": "CMake template build task",
            "type": "cmake",
            "label": "CMake: build",
            "command": "build",
            "targets": [
                "all"
            ],
            "group": "build",
            "problemMatcher": [ ],
            "dependsOn": [ ],
            "presentation": {
                "echo": true,
                "reveal": "never",
                "revealProblems": "onProblem",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true
            }
        },
        {
            "detail": "CMake template configure task",
            "type": "cmake",
            "label": "CMake: configure",
            "command": "configure",
            "group": "build",
            "problemMatcher": [ ],
        },

    ]
}